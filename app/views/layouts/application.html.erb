<!DOCTYPE html>
<html>
  <head>
    <title>Niceshoes</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://js.stripe.com/v3/"></script>

  </head>

  <body>
    <header>
      <figure>
          <img src="http://via.placeholder.com/80" alt="Nice Shoes Logo">
          <figcaption>Nice Shoes</figcaption>
      </figure>
      <nav>
        <span>
            <% if user_signed_in? %>
              <%= current_user.email %>
              |
              <%= link_to "Logout", destroy_user_session_path, method: :delete %>
            <% else %>
              <%= link_to "Login", new_user_session_path %>
              |
              <%= link_to "Sign up", new_user_registration_path %>
            <% end %>
        </span>
      </nav>
    </header>
    <div class="submenu">
        <span><h2><%= link_to "Buying", root_path %></h2></span>
        <span><h2><%= link_to "Selling", new_shoe_path %></h2></span>
        <span><h2><%= link_to "Blog", blog_index_path %></h2></span>
    </div>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <% if flash[:errors] %>
      <section class="errors">
        <p class="title">The following errors occured:</p>
        <ul>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </section>
    <% end %>
    <hr>
    <h1>Shopping cart</h1>
    Items:
    <%= @cart.size %>
    <br>
    <% @cart.each do |cart_item| %>
      <br>
      <%= cart_item.name %>
      <%= "- A$#{cart_item.price}" %>
      <%= link_to "Remove from cart", remove_from_cart_path(cart_item), method: :delete %>
    <% end %>
    <br><br>
    <% if @cart.present? %>
      <%= button_to "Buy now!", checkout_buy_path %>    
    <% end %>
    <hr>
    <%= yield %>
  </body>
</html>


<script type="text/javascript">
  var stripe = Stripe("<%= ENV["STRIPE_PUBLISHABLE_KEY"] %>");
  var checkoutButton = document.getElementById("checkout-button");
  checkoutButton.addEventListener("click", function () {
    fetch("/checkout/buy", {
      method: "POST",
    })
      .then(function (response) {
        return response.json();
      })
      .then(function (session) {
        return stripe.redirectToCheckout({ sessionId: session.id });
      })
      .then(function (result) {
        // If redirectToCheckout fails due to a browser or network
        // error, you should display the localized error message to your
        // customer using error.message.
        if (result.error) {
          alert(result.error.message);
        }
      })
      .catch(function (error) {
        console.error("Error:", error);
      });
  });
</script>
