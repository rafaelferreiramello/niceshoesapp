<%= form_with model: @shoe, local: true do |f| %>
    <p>
        <%=f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </p>
    <p>
        <%= f.label :price %>
        <%= f.number_field :price %>
    </p>
    <p>
        <%= f.label :stock %>
        <%= f.number_field :stock %>
    </p>
    <p>
        <%= f.label :categories %>
        <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
    </p>
    <p>
        <%= f.label :photo %>
        <%= f.file_field :photo %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>